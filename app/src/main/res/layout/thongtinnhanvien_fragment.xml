<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.NhanVienFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:gravity="right">
                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="18dp"
                            android:elevation="5dp"
                            app:cardCornerRadius="50dp">
                            <ImageView
                                android:id="@+id/ivAvatar_HV"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/user"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:gravity="right">
                        <androidx.cardview.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="18dp"
                            android:layout_marginRight="10dp"
                            android:elevation="5dp"
                            app:cardCornerRadius="18dp"
                            android:layout_gravity="bottom">
                            <ImageView
                                android:id="@+id/ivChange_avatar"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_camera"
                                android:layout_gravity="center" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tvTen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ten Driver"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tvRank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rank"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/purple_200"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thông tin cá nhân"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_Thaydoi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thay đổi"
                        android:textColor="@color/purple_700"
                        android:textSize="18dp"
                        android:gravity="right"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_TenNV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="\tTen Nhan Vien"
                    android:drawableLeft="@drawable/ic_person"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/tv_Chucvu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="\tChuc vu"
                    android:drawableLeft="@drawable/ic_chucvu"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/tv_SDT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:hint="\t0983841301"
                    android:drawableLeft="@drawable/ic_phone"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/purple_200"/>

            <TextView
                android:id="@+id/tv_DoiMK"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:text="\tĐổi mật khẩu"
                android:drawableLeft="@drawable/ic_matkhau"
                android:drawableRight="@drawable/ic_next"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:gravity="center_vertical"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/purple_200"/>

            <TextView
                android:id="@+id/tv_DangXuat"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:text="\tĐăng xuất"
                android:drawableLeft="@drawable/ic_out"
                android:drawableRight="@drawable/ic_next"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:gravity="center_vertical"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/purple_200"/>

            <TextView
                android:id="@+id/tv_Thoat"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:text="\tThoát"
                android:drawableLeft="@drawable/ic_out"
                android:drawableRight="@drawable/ic_next"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:gravity="center_vertical"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>