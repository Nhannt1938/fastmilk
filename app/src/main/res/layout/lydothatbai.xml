<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        >
        <ImageView
            android:id="@+id/Btn_cancel_ds"
            android:src="@drawable/ic_baseline_clear_24"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView

            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:text="Lịch sử đơn hàng"
            android:textColor="#203048"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </androidx.appcompat.widget.Toolbar>
<LinearLayout
    android:layout_marginLeft="20dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <RadioButton
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <TextView
        android:gravity="center_vertical"
        android:text="Shop từ chối nhận hàng"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
</LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RadioButton
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center_vertical"
            android:text="không thể liên hệ shop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
      android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RadioButton
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center_vertical"
            android:text="Lý do khac"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <EditText
        android:gravity="start"
        android:hint="Nhập lý do tại đây"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
     android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>
    <com.google.android.material.button.MaterialButton
        android:text="Gửi"
        app:backgroundTint="#D73200"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>
</LinearLayout>